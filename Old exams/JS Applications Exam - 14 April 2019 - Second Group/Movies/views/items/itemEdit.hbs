<div id="editMovie">
      <h1>Edit movie</h1>
      <form action="#/details/{{item._id}}/edit" method="POST">
        <label>Title</label>
        <input type="text" name="title" value="{{item.title}}" id="editTitle">
        <label>Image Url</label>
        <input type="text" name="imageUrl" id="editImage"
          value={{item.imageUrl}}>
        <label>Description</label>
        <textarea type="text" id="editDescription"
          name="description">{{item.description}}</textarea>
        <label>Genres</label>
        <input type="text" name="genres" value={{item.genres}} id="editGenres">
        <label>Available Tickets</label>
        <input type="number" name="tickets" value={{item.tickets}} id="editTickets">
        <input type="submit" value="Edit">
      </form>
    </div>
