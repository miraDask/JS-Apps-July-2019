{{> header}}
<div class="row event-details" id={{item._id}}>
    <div class="col-md-12 text-center overflow-hidden">

        <img class="details-img" src={{item.imageURL}} />
        <div class="my-3 p-3">
            <h2 class="display-5">{{item.name}}</h2>
            <p class="infoType">Description:</p>
            <p class="event-description">{{item.description}}</p>
            <p class="infoType">Date: <small>{{item.dateTime}}</small></p>
            <p class="infoType">Peope interested in: <small>{{item.subscribers}}</small></p>
            <p class="infoType">Organizer: <small>{{item.organizer}}</small></p>
        </div>
        {{#if isOrganizer}}
        <a href="#" class="btn btn-primary btn-lg">Edit the event</a>
        <a href="#" class="btn btn-danger btn-lg">Close the event</a>
        {{else}}
        <a href="#" class="btn btn-info btn-lg">Join the event</a>
        {{/if}}
    </div>
</div>
{{> footer }}